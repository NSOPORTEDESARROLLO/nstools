#!/bin/bash

NSTOOLS_PATH="/opt/nstools"

trap "$NSTOOLS_PATH/bin/cat_voip" SIGINT
clear
	. /opt/nstools/lib/header


#Buscamos si el servicio se encuentra instalado
if [ ! -f "/host/sbin/asterisk" ];then

	echo "Parece que el servicio de VOIP no se encuentra instalado"
	echo ""
	echo "        [enter]  -  Para Regresar"
	
	read a
	exec $NSTOOLS_PATH/bin/nstools_start
fi








echo "HERRAMIENTAS VOIP - Seleccione una opcion:

	[1]   -  Ejecutar Comando VOIP CORE
	[2]   -  Estado de Extension o Troncal
	[3]   -  Gestion de FTP
	[4]   -  Borrado Automatico de Grabaciones  

	[r]   -  Regresar

"

read OPT


case $OPT in 

	1)
		exec $NSTOOLS_PATH/bin/gui_astman_cli
	;;

	3)
		exec $NSTOOLS_PATH/bin/gui_ftp_tools

	;;

	4)
		exec $NSTOOLS_PATH/bin/gui_voip_recordings

	;;

	r)
		exec $NSTOOLS_PATH/bin/nstools_start
	;;

	*)
		exec $NSTOOLS_PATH/bin/cat_voip

	;;

 esac