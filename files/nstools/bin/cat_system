#!/bin/bash


#Plantilla para la categoria System



NSTOOLS_PATH="/opt/nstools"

trap "exec $NSTOOLS_PATH/bin/cat_system" SIGINT
clear
	. /opt/nstools/lib/header
echo "HERRAMIENTAS DEL SISTEMA - Seleccione una opcion:

	[1]   -  Visualizador de Logs
	[2]   -  Limpieza de logs
	[3]   -  Servicios del sistema
	[4]   -  Monitor de Sistema
	[5]   -  Activar o Cambiar NSID
	[6]  -   Hostname

	[r]  -  Regresar

"

read OPT


case $OPT in 

	1)
		exec $NSTOOLS_PATH/bin/gui_debug_tools
	;;

	2)
		exec $NSTOOLS_PATH/bin/gui_logs_tools
	;;

	3)
		exec $NSTOOLS_PATH/bin/gui_services_tools
	;;

	4) 
		htop
	;;

	5)
		exec $NSTOOLS_PATH/bin/gui_nsid_tools
 	;;	

	6)
		exec $NSTOOLS_PATH/bin/gui_set_hostname
	;;	

	r)
		
		exec $NSTOOLS_PATH/bin/nstools_start

	;;


	*)
		echo "Opcion Invalida"
		exec $NSTOOLS_PATH/bin/cat_system
	;;

esac