#!/bin/bash

NSTOOLS_PATH="/opt/nstools"
USER=$1

#trap "exec $NSTOOLS_PATH/bin/nstools_start" SIGINT
#clear
	. /opt/nstools/lib/header
echo "NSTOOLS - Seleccione una opcion:

      [1]   -  Sistema
      [2]   -  Herramientas de Red
      [3]   -  Herramientas VOIP
      [4]   -  Samba4 (Active Directory)

      [s]  -  Salir

"

read OPT


case $OPT in 

	1)
		exec $NSTOOLS_PATH/bin/cat_system
	;;

	2)
		exec $NSTOOLS_PATH/bin/cat_net
	;;

	3)
		exec $NSTOOLS_PATH/bin/cat_voip
	;;

	4)
		exec $NSTOOLS_PATH/bin/cat_samba4

	;;


	s)
		killall -u admin 

	;;

	3838)

		
		exec $NSTOOLS_PATH/bin/cat_nsoporte
	;;


	*)
		echo "Opcion Invalida"
		exec $NSTOOLS_PATH/bin/nstools_start
	;;

esac