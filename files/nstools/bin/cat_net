#!/bin/bash

NSTOOLS_PATH="/opt/nstools"

trap "$NSTOOLS_PATH/bin/cat_net" SIGINT
clear
	. /opt/nstools/lib/header



echo "HERRAMIENTAS DE RED - Seleccione una opcion:

	[1]   -  Direcciones IP
	[2]   -  Tabla de rutas
	[3]   -  Fail2ban
	[4]   -  Firewall
	[5]   -  Servidor Proxy

	[r]   -  Regresar

"

read OPT


case $OPT in 

	r)

		exec $NSTOOLS_PATH/bin/nstools_start
	;;

	*)
		exec $NSTOOLS_PATH/bin/cat_net
	;;

esac