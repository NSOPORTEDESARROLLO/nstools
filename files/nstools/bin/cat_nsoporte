#!/bin/bash


#Plantilla para la categoria de herramientas exclusivas de Nsoporte



NSTOOLS_PATH="/opt/nstools"

trap "exec $NSTOOLS_PATH/bin/cat_nsoporte" SIGINT
clear
	. /opt/nstools/lib/header
echo "HERRAMIENTAS EXCLUSIVAS DE NSOPORTE - Seleccione una opcion:

	[1]   -  Asterisk CLI
	[2]   -  Reiniciar Contenedor NSTOOLS
	[3]   -  Gestion de Usuario admin
	[4]   -  BASH

	[r]  -  Regresar

"

read OPT


case $OPT in 

	1)
		/usr/sbin/chroot /host /usr/sbin/asterisk -rvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvv
	;;
	
	2)
		exec docker restart nstools
	;;

	4)
		exec /bin/bash

	;;


	r)
		exec $NSTOOLS_PATH/bin/nstools_start
	;;

	*)
		exec $NSTOOLS_PATH/bin/cat_nsoporte
	;;

esac	